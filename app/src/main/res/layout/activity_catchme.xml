<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".catchme">

    <android.support.v7.widget.GridLayout
            android:layout_width="374dp"
            android:layout_height="352dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            tools:layout_editor_absoluteY="93dp"
            tools:ignore="MissingConstraints" android:id="@+id/gridLayout2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_centerVertical="true">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp" app:srcCompat="@drawable/clipart1497721"
                android:id="@+id/imageView" android:onClick="counter"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp" app:srcCompat="@drawable/clipart1497721"
                android:id="@+id/imageView1" android:onClick="counter"/>
        <ImageView
                android:layout_width="120dp"
                android:onClick="counter"
                android:layout_height="110dp" app:srcCompat="@drawable/clipart1497721"
                android:id="@+id/imageView2"/>
        <ImageView
                android:layout_width="120dp"
                android:onClick="counter"
                android:layout_height="110dp" app:srcCompat="@drawable/clipart1497721"
                android:id="@+id/imageView3" app:layout_column="0" app:layout_row="1"/>
        <ImageView
                android:layout_width="120dp"
                android:onClick="counter"
                android:layout_height="110dp" app:srcCompat="@drawable/clipart1497721"
                android:id="@+id/imageView4" app:layout_column="1" app:layout_row="1"/>
        <ImageView
                android:layout_width="120dp"
                android:onClick="counter"
                android:layout_height="110dp" app:srcCompat="@drawable/clipart1497721"
                android:id="@+id/imageView5" app:layout_column="2" app:layout_row="1"/>
        <ImageView
                android:layout_width="120dp"
                android:onClick="counter"
                android:layout_height="110dp" app:srcCompat="@drawable/clipart1497721"
                android:id="@+id/imageView6" app:layout_column="0" app:layout_row="2" />
        <ImageView
                android:layout_width="120dp"
                android:onClick="counter"
                android:layout_height="110dp" app:srcCompat="@drawable/clipart1497721"
                android:id="@+id/imageView7" app:layout_column="1" app:layout_row="2" />
        <ImageView
                android:layout_width="120dp"
                android:onClick="counter"
                android:layout_height="110dp" app:srcCompat="@drawable/clipart1497721"
                android:id="@+id/imageView8" app:layout_column="2" app:layout_row="2"
                tools:ignore="ContentDescription"/>
    </android.support.v7.widget.GridLayout>
    <TextView
            android:text="TIME: 10"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:id="@+id/timer" android:gravity="center"
            android:layout_marginStart="156dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/total" app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintVertical_bias="0.089"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="21dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="134dp"
            android:layout_above="@+id/gridLayout2" android:layout_alignParentTop="true"/>
    <TextView
            android:text="SCORE:0"
            android:layout_width="wrap_content"
            android:layout_height="46dp" android:textSize="25sp"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/total"
            android:layout_marginEnd="153dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="128dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_marginTop="4dp" android:layout_below="@+id/gridLayout2" />
</RelativeLayout>